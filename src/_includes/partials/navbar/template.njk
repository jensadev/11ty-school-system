<nav class="navbar" aria-label="Primary">
    <div class="navbar__inner container">
        {% if props.brand %}
        <a class="navbar__brand" href="{{ props.brand.url | url }}">
            {% if props.brand.icon %}
                <span class="material-icons"> {{ props.brand.icon }} </span>
            {% elif props.brand.text %}
                {{ props.brand.text }}
            {% endif %}
        </a>
        {% endif %}
        <button class="navbar__toggle">
            <span class="material-icons"> menu </span>
        </button>
        <div class="navbar__collapse">
            <ul class="nav">
                {% for item in props.menu.items %}
                {% if item.dropdown %}
                <li class="nav__item dropdown">
                    <a class="nav__link nav__link--dropdown-toggle" href="#" role="button"
                        >{{ item.title }}</a
                    >
                    <ul class="nav dropdown__content">
                        {% if item.children %}
                            {% for child in item.children %}
                            <li class="dropdown__item">
                                <a
                                    class="nav__link{% if page.url === child.url %} nav__link--active{% endif %}"
                                    href="{{ child.url | url }}"
                                    >{{ child.title }}</a
                                >
                            </li>
                            {% endfor %}
                        {% elif item.collection %}
                            {% for child in item.collection %}
                            <li class="dropdown__item">
                                <a
                                class="nav__link{% if page.url === child.url %} nav__link--active{% endif %}"
                                    href="{{ child.url | url}}"
                                    >{{ child.data.title }}</a
                                >
                            </li>
                            {% endfor %}
                        {% else %}
                            <li>fel</li>
                        {% endif %}
                    </ul>
                </li>
                {% else %}
                    <li class="nav__item">
                        <a
                            class="
                                nav__link{%
                                if
                                page.url
                                ===
                                '/'
                                %}
                                active{%
                                endif
                                %}
                            "
                            href="{{ site.path }}/{{ item.url if item.url }}"
                            >{{ item.title }}</a
                        >
                    </li>
                {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
</nav>

{% set js %}
    {% include 'partials/navbar/navbar.js' %}
{% endset %}
<script>
  {{ js | safe }}
</script>